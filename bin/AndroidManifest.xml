            android:name="edu.bc.schlitda.slacbuddy.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.bc.schlitda.slacbuddy.HowToLandingPage"
            android:label="@string/title_activity_how_to_landing_page"
